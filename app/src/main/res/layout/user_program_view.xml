<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/tvUserProgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test 1" />

        <TextView
            android:id="@+id/tvUserProgramDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUserProgramName"
            android:text="Text 2" />

        <ImageView
            android:id="@+id/programEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/programDelete"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/programDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_remove"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>