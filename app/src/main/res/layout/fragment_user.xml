<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="6"
    android:orientation="horizontal"
    tools:context=".fragments.UserFragment">


    <TextView

        android:id="@+id/tvUserAccount"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/userAccount"/>

    <TextView

        android:id="@+id/tvAccountName"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Kontonavn..."

    />


    <Button

        android:id="@+id/btnDeleteAccount"
        android:layout_column="2"
        android:layout_row="0"
        android:text="@string/deleteAccount"


        ></Button>

   <TextView

       android:id="@+id/tvUserName"
       android:layout_column="0"
       android:layout_row="1"
       android:text="@string/userName"></TextView>


    <TextView

        android:id="@+id/tvUserNameText"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Brukernavn..."
        ></TextView>

    <Button

        android:id="@+id/btnChangeUserName"
        android:layout_column="2"
        android:layout_row="1"
        android:text="@string/editUserName"></Button>

    <TextView

        android:id="@+id/tvPhoneNumber"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Telefonnummer:"></TextView>


    <TextView

        android:id="@+id/tvPhoneNumberText"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Telefonnr..."
        ></TextView>

    <Button

        android:id="@+id/btnChangePhoneNumber"
        android:layout_column="2"
        android:layout_row="2"
        android:text="@string/editPhoneNumber"></Button>

    <TextView

        android:id="@+id/tvEmail"
        android:layout_column="0"
        android:layout_row="3"
        android:text="E-post:"></TextView>


    <TextView

        android:id="@+id/tvEmailText"
        android:layout_column="1"
        android:layout_row="3"
        android:text="Email..."
        ></TextView>

    <Button

        android:id="@+id/btnChangeEmail"
        android:layout_column="2"
        android:layout_row="3"
        android:text="@string/editEmail"></Button>

    <TextView

        android:id="@+id/tvBirthyear"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Fødselsår:"></TextView>


    <TextView

        android:id="@+id/tvBirthYearText"
        android:layout_column="1"
        android:layout_row="4"
        android:text="Fødselsår..."
        ></TextView>

    <Button

        android:id="@+id/btnEditBirthYear"
        android:layout_column="2"
        android:layout_row="4"
        android:text="@string/editBirthYear"></Button>


    <Button

        android:id="@+id/btnLogout"
        android:layout_column="0"
        android:layout_row="5"
        android:text="@string/logout"></Button>


</GridLayout>